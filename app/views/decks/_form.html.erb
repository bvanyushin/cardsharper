<%= form_for @deck do |f| %>

  <% if @deck.errors.any? %>
    <div id="error_message">
      <h2>
        <%= pluralize(@deck.errors.count, "error") %> prohibited
        this deck from being saved:
      </h2>
      <ul>
        <% @deck.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label "Название" %><br>
    <%= f.text_field :title %>
  </p>

  <% if @deck.is_current %>
    <%= "Это текущая колода" %>
  <% else %>
    <p>
      <%= f.label "Сделать текущей" %><br>
      <%= f.check_box :is_current %>
    </p>
  <% end %>
  <p>
    <%= f.submit %>
  </p>
 
<% end %>